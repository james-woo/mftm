.pull-right
    md-card
        md-card-title
            md-card-title-text
                form.form-inline
                    p Your Location
                    p {{location}}
                        .form-group
                        button.btn-custom-include.btn(ng-click="changeLocation()") Change
    md-card
        md-card-title
            md-card-title-text
                form.form-inline
                    p Search Ingredients
                        .form-group
                        input.form-control(type='text', autocomplete='true', ng-model='ingredientInput', placeholder='Ingredients', typeahead='ingredients', typeahead-callback='filterIngredients')
                        p You selected: {{ingredient.name}}
                    p Ingredient Suggestions
                        br
                        ng-form(data-ng-repeat="suggestion in suggestions")
                            button.btn-custom-include.btn(ng-click="removeSuggestion(suggestion)") {{suggestion}}
    md-card
        md-card-title
            md-card-title-text
                form.form-inline
                    p Omit Ingredients
                        .form-group
                        input.form-control(type='text', autocomplete='false', ng-model='omitInput', placeholder='Ingredients', typeahead='omitted', typeahead-callback='filterOmitted')
                        p You selected: {{omit.name}}
                    p Omitted Ingredients
                        .form-group
                        button.btn-custom-exclude.btn Butter
                        button.btn-custom-exclude.btn Milk
                        button.btn-custom-exclude.btn Chicken
                        button.btn-custom-exclude.btn Ice
    md-card
        md-card-title
            md-card-title-text
                form.form-inline
                    p Equipment
                        .form-group
                        input.form-control(type='text', autocomplete='false', ng-model='equipmentInput', placeholder='Equipment', typeahead='equipment', typeahead-callback='filterEquipment')
                        p You selected: {{equipment.name}}
                    p Your Equipment
                        .form-group
                        button.btn-custom-include.btn Pan
                        button.btn-custom-include.btn Oven
    md-card
        md-card-title
            md-card-title-text
                .form-group
                    p Meal Type
                    .col-md-4
                        .checkbox
                            label(for='mealtype-checkboxes-0')
                                input#mealtype-checkboxes-0(type='checkbox', ng-model="mealtypeCheck.breakfast")
                                |       Breakfast
                        .checkbox
                            label(for='mealtype-checkboxes-1')
                                input#mealtype-checkboxes-1(type='checkbox', ng-model="mealtypeCheck.lunch")
                                |       Lunch
                        .checkbox
                            label(for='mealtype-checkboxes-2')
                                input#mealtype-checkboxes-2(type='checkbox', ng-model="mealtypeCheck.dinner")
                                |       Dinner
                        .checkbox
                            label(for='mealtype-checkboxes-3')
                                input#mealtype-checkboxes-3(type='checkbox', ng-model="mealtypeCheck.snacks")
                                |       Snacks
    md-card
        md-card-title
            md-card-title-text
                .form-group
                    p Difficulty
                    .col-md-4
                        .checkbox
                            label(for='difficulty-checkboxes-0')
                                input#difficulty-checkboxes-0(type='checkbox', ng-model="difficultyCheck.easy")
                                |       I can make cereal
                        .checkbox
                            label(for='difficulty-checkboxes-1')
                                input#difficulty-checkboxes-1(type='checkbox', ng-model="difficultyCheck.medium")
                                |       Average
                        .checkbox
                            label(for='difficulty-checkboxes-2')
                                input#difficulty-checkboxes-2(type='checkbox', ng-model="difficultyCheck.hard")
                                |       Iron Chef
